@model NET_Contact_form_Zadanie.Models.ContactFormResponse

@{
    ViewBag.Title = "ContactForm";
}

<h2>ContactForm</h2>

@Html.ValidationSummary()
@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Your name*:</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>E-mail*:</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Message*:</label>
        @Html.TextBoxFor(x => x.MessageText, new { @class = "form-control" })
    </div>
    
    <div class="text-center">
        <input type="submit" value="Send answer" class="btn btn-warning" />
    </div>
}